            <a class="text-decoration-none" href="#posts"><button style=" border-radius: 30px; margin-left: 15%; margin-top: 8px;" type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#staticBackdrop12">
                Category qo'shish
              </button>
            
            <!-- Modal -->
            
          <li>
          <li><a href="#posts">Authors</a></li>
