<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title><link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    
    <section>
      <div class="container"><h2>MVS<br />Book store</h2><nav>
        <ul class="nav-links">
            <li><a href="#home">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="#contact">Contact</a></li>
            <li style="margin-left: 26%;"><a href="/signin">Log In</a></li>
            
        </ul>
    </nav></div>

      <div class="container">
        <% books.forEach(el => { %>
          <div class="card">
            <div class="card-inner" style="--clr: #fff">
              <div class="box">
                <div class="imgBox">
                  <img
                    src="<%= el.image %>"
                    alt="Trust & Co."
                  />
                </div>
                <div class="icon">
                  <a href="/order/<%= el.id %>" class="iconBox">
                    <span class="material-symbols-outlined">
                      <img style="width: 38px;" src="/img/online-shop.png" alt="">
                    </span></a
                  >
                </div>
              </div>
            </div>
            <div class="content">
              <h3><%= el.title %></h3>
              <p>
                <%= el.description %>
              </p>
              <h5 style="margin-bottom: 6px;">Price:
                <%= el.price %>$
                <p style="margin-bottom: 6px;">Exist:
                <%= el.count %>
              </p>
              </h5>
              
              <ul>
                <li style="--clr-tag: #d3b19a" class="branding"><%= el.categoryId %></li>
              </ul>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
    <script src="/css/main.css"></script>
  </body>
</html>
